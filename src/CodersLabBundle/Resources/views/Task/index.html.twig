{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cele Firmy</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Data</th>
                <th>Status</th>
                <th>Piorytet</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a>{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.priority }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('task_show', { 'id': entity.id }) }}">Wiecej</a>
                    </li>
                    <li>
                        <a href="{{ path('task_edit', { 'id': entity.id }) }}">Edytuj</a>
                    </li>
                    <li><a href="{{ path('comment_new', { 'id': entity.id }) }}">
                        Komentarz
                    </a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



